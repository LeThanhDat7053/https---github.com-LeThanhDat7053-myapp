<h1>New product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %> <!-- Trường name -->
  </div>

  <div>
    <%= form.label :price %> <!-- Trường price -->
    <%= form.number_field :price, step: "0.01" %> <!-- Trường price với step để nhập giá chính xác -->
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
